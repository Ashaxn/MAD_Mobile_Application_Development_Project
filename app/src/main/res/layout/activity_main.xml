<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="5dp "
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        app:srcCompat="@drawable/view_gig2_navi" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/textView_email"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/textview_email"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"/>

    <EditText
        android:id="@+id/f_name_email"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/rounded_text"
        android:hint="@string/edittext_email"
        android:padding="8dp"
        android:textSize="23dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />





    <TextView
        android:id="@+id/textView_province"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/textview_province"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"/>

    <EditText
        android:id="@+id/f_name_province"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/rounded_text"
        android:hint="@string/edittext_province"
        android:padding="8dp"
        android:textSize="23dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />





    <TextView
        android:id="@+id/textView_mobile"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:text="@string/textview_mobile"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="1dp"/>

    <EditText
        android:id="@+id/f_name_mobile"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/rounded_text"
        android:hint="@string/edittext_mobile"
        android:padding="8dp"
        android:textSize="23dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:background="@drawable/button"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>
